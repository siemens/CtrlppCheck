<rule version="1">
	<pattern>^[A-Z0-9\\-\\_]+$</pattern>
	<message>
		<id>const</id>
		<summary>The variable name cannot consist of lowercase letters.</summary>
	</message>
</rule>

<rule version="1">
	<pattern>^.+$</pattern>
	<message>
		<id>const * argument</id>
		<summary>The const rule should not apply to functional arguments.</summary>
	</message>
</rule>

